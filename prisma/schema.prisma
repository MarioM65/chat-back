generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Usuario{
  id               Int               @id @default(autoincrement())
  nome_usuario  String            
  foto_perfil   String?
  telefone     String?
  email        String
  status      String        @default("Offline")
  senha       String
  criado_em    DateTime         @default(now())
  atualizado_em DateTime         @updatedAt
  deletado_em   DateTime?
  usuariosBloqueados UsuarioBloqueado[]
  mensagem Mensagem[]
}
model UsuarioBloqueado{
  id               Int       @id @default(autoincrement())
  id_usuario      Int
  id_usuario_bloqueado Int
  criado_em    DateTime   @default(now())
  atualizado_em DateTime   @updatedAt
  usuario        Usuario   @relation(fields: [id_usuario], references: [id])
  @@unique([id_usuario, id_usuario_bloqueado])
}

model Conversa {
  id_conversa Int @id @default(autoincrement())
  tipo_conversa String
  nome_conversa String
  participante_conversa ParticipanteConversa[]
}

model ParticipanteConversa  {
  id_participante_conversa Int @id @default(autoincrement())
  id_conversa Int
  id_usuario Int
  tipo_participante String
  conversa Conversa @relation(fields: [id_conversa], references: [id_conversa])
}
model Mensagem {
  id            Int       @id @default(autoincrement())
  id_remetente  Int
  remetente     Usuario   @relation(fields: [id_remetente], references: [id])
  id_conversa   Int?
  conteudo      String?
  tipo          String    
  lida          Boolean   @default(false)
  respondendo_a Int?
  resposta      Mensagem? @relation("RespostaMensagem", fields: [respondendo_a], references: [id])
  respostas     Mensagem[] @relation("RespostaMensagem")
  criado_em     DateTime  @default(now())
  deletado_em DateTime?

  anexos        Anexo[]
}


model Anexo {
  id            Int       @id @default(autoincrement())
  id_mensagem   Int
  mensagem      Mensagem  @relation(fields: [id_mensagem], references: [id])
  nome_arquivo  String
  caminho_arquivo String
  tipo          String    // 'imagem', 'video', 'pdf', etc.
  tamanho       Int
  criado_em     DateTime  @default(now())
}


